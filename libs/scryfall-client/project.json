{
  "name": "scryfall-client",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/scryfall-client/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/scryfall-client",
        "main": "libs/scryfall-client/src/index.ts",
        "tsConfig": "libs/scryfall-client/tsconfig.lib.json",
        "assets": ["libs/scryfall-client/*.md"]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs scryfall-client {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "../../coverage/libs/scryfall-client"
      }
    }
  },
  "tags": []
}
